{
  "name": "topphp/topphp-skeleton",
  "description": "topphp-skeleton",
  "type": "project",
  "keywords": [],
  "homepage": "https://www.kaituocn.com/",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "sleep",
      "email": "sleep@kaituocn.com"
    }
  ],
  "require": {
    "php": ">=7.2.0",
    "ext-json": "*",
    "ext-mbstring": "*",
    "topthink/framework": "^6.0.0",
    "topthink/think-swoole": "^3.0",
    "topthink/think-annotation": "^1.0",
    "topthink/think-multi-app": "^1.0",
    "topphp/topphp-swoole": "dev-master"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.5",
    "symfony/var-dumper": "^4.2",
    "topthink/think-trace": "^1.0",
    "topphp/topphp-testing": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "app\\": "app"
    },
    "psr-0": {
      "": "extend/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Topphp\\Test\\": "tests/src"
    }
  },
  "config": {
    "preferred-install": "dist"
  },
  "scripts": {
    "test": "./vendor/bin/phpunit -c ./phpunit.xml.dist",
    "check-style": "phpcs app tests",
    "fix-style": "phpcbf app tests",
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.example.env', '.env');\""
    ],
    "post-autoload-dump": [
      "@php think service:discover",
      "@php think vendor:publish"
    ]
  },
  "repositories": {
    "topphp": {
      "type": "path",
      "url": "../topphp/*"
    },
    "packagist": {
      "type": "composer",
      "url": "https://mirrors.aliyun.com/composer"
    }
  }
}
